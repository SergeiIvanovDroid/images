<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewAddDialog"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/imageViewAddDialog">

        <EditText
            android:id="@+id/editTextAddTags"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:hint="@string/hint_add_tags" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextAddTags"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPositiveAddImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ok"
                android:background="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/buttonNegativeAddImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>